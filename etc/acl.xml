<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Magento_Backend::content_elements">
                        <resource id="Cytracon_NinjaMenus::ninjamenus" title="Ninja Menus" sortOrder="10">
                            <resource id="Cytracon_NinjaMenus::menu" title="Menu" translate="title" sortOrder="10">
                                <resource id="Cytracon_NinjaMenus::menu_save" title="Save Menu" sortOrder="10" />
                                <resource id="Cytracon_NinjaMenus::menu_delete" title="Delete Menu" sortOrder="20" />
                            </resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Cytracon_NinjaMenus::settings" title="Ninja Menus" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>