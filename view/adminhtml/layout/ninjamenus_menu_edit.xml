<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <head>
        <css src="Cytracon_NinjaMenus::css/builder.css"/>
        <css src="Cytracon_NinjaMenus::css/styles.css"/>
        <css src="Cytracon_Core::css/minicolors/jquery.minicolors.css"/>
    </head>
    <body>
        <referenceContainer name="main.top">
            <block class="Cytracon\NinjaMenus\Block\Adminhtml\TopMenu" name="page.title" template="Cytracon_Core::menu.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <uiComponent name="ninjamenus_menu_form"/>
            <block class="Cytracon\NinjaMenus\Block\Adminhtml\Scripts" name="ninjamenus.scripts" template="scripts.phtml"/>
        </referenceContainer>
    </body>
</page>